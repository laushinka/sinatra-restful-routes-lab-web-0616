<!-- Shows only one recipe -->
<h1>Recipes</h1>
<%= @recipe.name %>
<%= @recipe.ingredients %>
<%= @recipe.cook_time.to_s + " minutes"%>

<!-- Option to delete -->
<!-- Action sends to the path of the corresponding id -->
<form method="post" action="/recipes/<%= @recipe.id %>/delete">
  <input id="hidden" type="hidden" name="_method" value="delete">
  <input type="submit" value="submit">
</form>
